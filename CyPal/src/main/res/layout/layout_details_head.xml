<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="viewModel"
            type="com.cypal.ming.cypal.vm.OderDetailsVM" />

        <variable
            name="eventHandler"
            type="com.cypal.ming.cypal.activity.TopUpDetailsActivity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="付款金额"
                android:textColor="#ff888888"
                android:textSize="15sp" />

            <TextView
                android:layout_width="56dp"
                android:layout_height="23dp"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@+id/tv_text"
                android:gravity="center"
                android:text="未付款"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                bind:state="@{viewModel.statusEnum}"
                tools:background="@drawable/toup_3776fb_bg" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="@{viewModel.amount}"
            android:textColor="#ff333333"
            android:textSize="24sp"
            tools:text="¥ 1000.00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@{viewModel.withdrawUserNickName}"
                android:textColor="#ff999999"
                android:textSize="14sp"
                tools:text="王庆喜" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@{viewModel.orderNo}"
                android:textColor="#ff999999"
                android:textSize="14sp"
                tools:text="王庆喜" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单时间"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@{viewModel.createTime}"
                android:textColor="#ff999999"
                android:textSize="14sp"
                tools:text="王庆喜" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="付款凭证"
            android:visibility="@{viewModel.paymentVoucherVisibility}"
            android:onClick="@{() -> eventHandler.onStartImg(viewModel.paymentVoucher)}"
            android:textColor="#ff3776fb"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/line_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="商家收款帐号"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ff333333"
            android:textSize="18sp"
            />
    </LinearLayout>

</layout>