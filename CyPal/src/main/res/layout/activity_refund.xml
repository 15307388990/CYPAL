<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CY_F8F8F8"
    android:orientation="vertical">

    <RelativeLayout
        layout="@layout/top_view_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_48"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_view_back"
            android:layout_width="@dimen/margin_75"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/all_icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />
        </LinearLayout>

        <ImageView
            android:id="@+id/right_view_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:src="@drawable/desk_icon_user"
            android:visibility="gone" />

        <TextView
            android:id="@+id/top_view_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="退还保证金"
            android:textColor="@color/CY_101010"
            android:textSize="@dimen/text_20" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:text="尊敬的用户你好：\n 当你提出申请退还保证金时，意味着你会失去赚取佣金的资格。 \n\n1.申请后将无法进行自动接单、手动抢单； \n\n2.保证金退还到您的收款帐号。"
        android:textColor="#ff666666"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_choose"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="收款帐号"
            android:textColor="@color/actionbar_title_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="请选择"
            android:textColor="@color/CY_999999"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_wexin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:src="@drawable/icon_weixin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:src="@drawable/icon_zhifubao"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_banl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:src="@drawable/icon_banl"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_yun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:src="@drawable/icon_yun"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_more" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="申请退还保证金"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_tui"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="注意，请确保您的收款帐号正常"
        android:textColor="#ff999999"
        android:textSize="12sp" />
</LinearLayout>