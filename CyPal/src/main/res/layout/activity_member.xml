<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        layout="@layout/top_view_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_48"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_view_back"
            android:layout_width="@dimen/margin_75"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/all_icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />
        </LinearLayout>

        <ImageView
            android:id="@+id/right_view_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:src="@drawable/desk_icon_user"
            android:visibility="gone" />

        <TextView
            android:id="@+id/top_view_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="会员管理"
            android:textColor="@color/CY_101010"
            android:textSize="@dimen/text_20" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:text="认证会员：需要上传真实的身份信息和缴3000.00CNY保证金"
        android:textColor="@color/actionbar_title_color"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="150dp"
            android:layout_height="102dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="21dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_member" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_img"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/iv_img"
            android:text="王大锤"
            android:textColor="#ff464e61"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_img"
            android:text="430**********11"
            android:textColor="#ff464e61"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_renzhen"
            android:layout_width="72dp"
            android:layout_height="53dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_yirenzhen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wei"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_wei"
            android:layout_width="217dp"
            android:layout_height="147dp"
            android:layout_centerInParent="true"
            android:src="@drawable/weirenzhen" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_bao"
            android:layout_width="42dp"
            android:layout_height="20dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:text="保证金"
            android:textColor="#ff666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_staus"
            android:layout_width="54dp"
            android:layout_height="18dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_bao"
            android:background="@drawable/weiyaoqing_bg"
            android:gravity="center"
            android:text="未缴纳"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="17dp"
            android:text="缴纳保证金"
            android:textColor="#ff007aff"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_staus"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="3000.00 CNY"
            android:textColor="#ff333333"
            android:textSize="17sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tui"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="保证金将退还到收款账号，请注意查收"
        android:textColor="#ff999999"
        android:textSize="12sp" />
</LinearLayout>