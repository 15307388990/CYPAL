<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="viewModel"
            type="com.cypal.ming.cypal.vm.OderDetailsItemVM" />
        <variable
            name="eventHandler"
            type="com.cypal.ming.cypal.vm.BankItemEventHandler"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                bind:src="@{viewModel.imgSrc}"
                android:textColor="#ff666666"
                android:textSize="14sp"
                tools:src="@drawable/icon_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="@{viewModel.typeText}"
                android:textColor="#ff333333"
                android:textSize="17sp"
                tools:text="银行卡" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款人"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@{viewModel.realName}"
                android:textColor="#ff999999"
                android:textSize="14sp"
                tools:text="王庆喜" />
            <TextView
                android:layout_width="34dp"
                android:layout_marginLeft="11dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:textSize="11sp"
                android:background="@drawable/f8f8f8_5dp_bg"
                android:onClick="@{()->eventHandler.copyName(viewModel)}"
                android:text="复制"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户银行"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@{viewModel.accountName}"
                android:textColor="#ff999999"
                android:textSize="14sp"
                tools:text="王庆喜" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户银行"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@{viewModel.accountData}"
                android:textColor="#ff999999"
                android:textSize="14sp"
                tools:text="王庆喜" />
            <TextView
                android:layout_width="34dp"
                android:layout_marginLeft="11dp"
                android:layout_height="16dp"
                android:gravity="center"
                android:textSize="11sp"
                android:background="@drawable/f8f8f8_5dp_bg"
                android:onClick="@{()->eventHandler.copyCard(viewModel)}"
                android:text="复制"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_bg" />
    </LinearLayout>

</layout>