<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/CY_3776FB"
	android:orientation="vertical">
	
	<RelativeLayout
		layout="@layout/top_view_white"
		android:layout_width="match_parent"
		android:layout_height="@dimen/title_height_48"
		android:background="@color/CY_3776FB">
		
		<LinearLayout
			android:id="@+id/ll_view_back"
			android:layout_width="@dimen/margin_75"
			android:layout_height="match_parent"
			android:layout_marginRight="@dimen/margin_5"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			
			<ImageView
				android:id="@+id/img_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/margin_10"
				android:contentDescription="@string/app_name"
				android:src="@drawable/all_icon_back" />
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="@dimen/margin_5"
				android:singleLine="true"
				android:textColor="@color/white"
				android:textSize="@dimen/text_18" />
		</LinearLayout>
		
		<TextView
			android:id="@+id/right_view_text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="20dp"
			android:gravity="center_vertical"
			android:singleLine="true"
			android:text="我的好友"
			android:textColor="#ccffffff"
			android:textSize="14sp" />
		
		<TextView
			android:id="@+id/top_view_text"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:drawablePadding="@dimen/margin_5"
			android:gravity="center_vertical"
			android:singleLine="true"
			android:text="邀请好友"
			android:textColor="@color/white"
			android:textSize="@dimen/text_20" />
	</RelativeLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="438dp"
		android:layout_centerInParent="true"
		android:layout_marginLeft="43dp"
		android:layout_marginRight="43dp"
		android:background="@drawable/f8f8f8_5dp_bg"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="22dp"
			android:text="邀请码"
			android:textColor="#ff999999"
			android:textSize="20sp" />
		
		<TextView
			android:id="@+id/tv_invite_code"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:textColor="#ff333333"
			android:textSize="30sp" />
		
		<TextView
			android:id="@+id/tv_copy"
			android:layout_width="70dp"
			android:layout_height="24dp"
			android:layout_marginTop="8dp"
			android:background="@drawable/angle_13_3776fb_bg"
			android:gravity="center"
			android:text="复制"
			android:textColor="#ffffffff"
			android:textSize="12sp" />
		
		<ImageView
			android:id="@+id/iv_img"
			android:layout_width="166dp"
			android:layout_height="166dp"
			android:layout_marginTop="44dp" />
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:text="扫一扫， 一起加入D0收款"
			android:textColor="#ff4f5f8e"
			android:textSize="14sp" />
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="33dp"
			android:text="请截屏保存图片或长按二维码保存"
			android:textColor="#ff999999"
			android:textSize="12sp" />
	</LinearLayout>
</RelativeLayout>